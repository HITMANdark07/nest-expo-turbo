{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["index.ts", "extensions/**/*", "prisma/schema.prisma"],
  "exclude": ["node_modules", "dist"]
}
